#!/bin/sh

rm -f /usr/bin/mrv2

fulldir=$(xdg-user-dir DESKTOP)

dir=${fulldir#/root/}

if [ $fulldir != $dir ]; then
    name=`logname`
    dir=/home/${name}/${dir}
fi

if [ -e "$dir/mrv2-v@mrv2_VERSION@.desktop" ]; then
    rm -f "$dir/mrv2-v@mrv2_VERSION@.desktop"
fi

update-desktop-database
update-mime-database /usr/share/mime
