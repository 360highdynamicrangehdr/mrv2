#!/bin/sh

# Remove old symlinks just in case
rm -f /usr/bin/mrv2

#
# Add mrv2 to path
#
startup="@CPACK_INSTALL_PREFIX@/bin/mrv2.sh"

echo "Creating symlink from $startup to /usr/bin/mrv2"
ln -s "$startup" /usr/bin/mrv2

#
# Make sure script is executable
#
chmod a+x "$startup"

#
# Install Desktop icon
#

name=`logname`
if [ -z "$name" ]; then
    name=$LOGNAME
fi

# First, check if user-dirs.dirs exists in user's config directory
config=.config
dir=/home/${name}/.config/
file=${dir}/user-dirs.dirs

# if it does, copy it to root .config directory
if [ -e $file ]; then
    if [ ! -d /root/.config ]; then
       mkdir /root/.config
    fi
    cp $file /root/.config
fi

# Now, as root, get DESKTOP directory
fulldir=$(xdg-user-dir DESKTOP)
dir=${fulldir#/root/}

# If fulldir had /root/ in it, then rearrange to copy to /home/user directory
if [ $fulldir != $dir ]; then
    dir=/home/${name}/${dir}
fi

# Just in case.  If /home/user/DESKTOP directory is missing, create it.
echo "DIR: " ${dir}
if [ ! -d $dir ]; then
    mkdir $dir
fi

sharedir=/usr/local/@mrv2ShortName@/share/
appdir=${sharedir}applications
cp -f ${appdir}/mrv2-v@mrv2_VERSION@.desktop "${dir}"
cp -f ${appdir}/mrv2-v@mrv2_VERSION@.desktop /usr/share/applications/mrv2.desktop
cp -rf ${sharedir}/* /usr/share/
chown ${name} "${dir}/mrv2-v@mrv2_VERSION@.desktop"

xdg-mime default mrv2-v@mrv2_VERSION@.desktop video/mp4 video/mpeg video/quicktime video/x-javafx video/x-flv video/x-matroska video/x-ms-wmv video/x-msvideo image/x-avi image/x-mov image/x-mp4 video/x-session video/x-reel

xdg-mime default mrv2-v@mrv2_VERSION@.desktop  image/bmp image/cin image/dpx image/gif image/x-jpeg image/x-png image/x-tiff image/vnd.adobe.photoshop image/vnd.microsoft.icon image/x-exr image/x-miff image/x-iff image/x-sgi image/x-sxr image/x-tga image/x-xcf image/x-xbitmap image/x-xpixmap image/x-sun-raster

update-desktop-database
update-mime-database /usr/share/mime
